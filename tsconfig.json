
{
    "compilerOptions": {
       "outDir": "./dist",
       "rootDir": "./src",
       "lib": ["esnext"],
       "target": "ESNext",
       "moduleResolution": "nodenext",
       "module": "nodenext",
       "strict": false,
       "sourceMap": true,
       "esModuleInterop": true,
       "declaration": true,
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts"] 
}